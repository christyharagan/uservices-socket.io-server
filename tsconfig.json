{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./node_modules/rx/ts/rx.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts",
        "./uservices-socket.io-server.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/index.ts",
        "./lib/localProxy.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/socket.io/socket.io.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts",
        "./node_modules/uservices/uservices.d.ts",
        "./node_modules/rx/ts/rx.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts",
        "./uservices-socket.io-server.d.ts"
    ]
}
